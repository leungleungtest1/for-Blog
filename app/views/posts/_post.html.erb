<div class='row'>
  <div class="well span0 text-center">
  <%= link_to vote_post_path(post, vote: true, post: post), method: :post do %>
    <i class="icon-arrow-up icon-black"></i>
    <% end %>
    <br/>
    <%= post.total_votes %> votes
    <br/>
      <%= link_to vote_post_path(post, vote: false, post: post), method: :post do %>
    <i class="icon-arrow-down icon-black"></i>
    <% end %>
  </div>
  <div class="span8 well">
    <p><%= render post.categories %></p>
      <h4><%= link_to post.title, post_path(post) %></h4>
      <p><%= post.description %></p>
      <p>
      <span class="quiet">posted by</span><%=link_to post.creator.username,user_path(post.creator) %>
        <small>at <%= display_datetime(post.created_at)%></small>
      </p>
      <p>
        <small>
          <span>
            <%= link_to "#{post.comments.size} comments", post_path(post) %>
            </span>
          </small>
      </p>
      <%= link_to "Edit this post", edit_post_path(post) %>
  </div> 
</div>