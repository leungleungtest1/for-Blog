<% show_post||= false %>
  <% comments.each do |comment| %>
  <div class="row">
  <div class="well span0 text-center">
    <%= link_to vote_post_comment_path(comment, vote: true, post_id: comment.post_id), method: "post" do %>
    <i class="icon-arrow-up"></i>
    <% end %>
    <br/>
    <%= comment.total_votes %> votes
    <br/>
    <%= link_to vote_post_comment_path(comment, vote: false, post_id: comment.post_id), method: "post" do %>
    <i class="icon-arrow-down"></i>
    <% end %>
    <br/>
  </div>
  <div class="well span8">
    <em><%= comment.body %></em>
    <% if show_post %>
    on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span>by</span><%= link_to comment.creator.username, user_path(comment.creator) %>
    <small>at<%= display_datetime(comment.created_at)%></small>
  </div>
  </div>
  <% end %>